<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.sqm</groupId>
    <artifactId>sqm-parent</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>SQM (parent)</name>
    <url>https://github.com/icher-g/sqm</url>
    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub Packages</name>
            <url>https://maven.pkg.github.com/icher-g/sqm</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </distributionManagement>
    <modules>
        <module>sqm-core</module>
        <module>sqm-render</module>
        <module>sqm-parser</module>
        <module>sqm-json</module>
        <module>sqm-render-ansi</module>
        <module>sqm-it</module>
        <module>examples</module>
        <module>sqm-parser-ansi</module>
    </modules>
    <properties>
        <maven.compiler.release>17</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.version>5.10.2</junit.version>
        <spring.version>6.2.7</spring.version>
    </properties>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <configuration>
                        <skip>true</skip> <!-- only applies if re-declared -->
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
               <groupId>org.jacoco</groupId>
               <artifactId>jacoco-maven-plugin</artifactId>
               <version>0.8.14</version>
         
               <executions>
                 <!-- Attach agent before tests -->
                 <execution>
                   <goals>
                     <goal>prepare-agent</goal>
                   </goals>
                   <configuration>
                     <includes>
                       <include>io/sqm/**</include>
                     </includes>
                   </configuration>
                 </execution>
         
                 <!-- Per-module reports (optional but fine to keep) -->
                 <execution>
                   <id>report</id>
                   <phase>verify</phase>
                   <goals>
                     <goal>report</goal>
                   </goals>
                   <configuration>
                     <!-- Ensure XML is actually produced -->
                     <reports>
                       <xml>true</xml>
                       <html>true</html>
                       <csv>false</csv>
                     </reports>
                   </configuration>
                 </execution>
         
                 <!-- ðŸ”¶ Aggregate report across all modules -->
                 <execution>
                   <id>report-aggregate</id>
                   <phase>verify</phase>
                   <goals>
                     <goal>report-aggregate</goal>
                   </goals>
                   <configuration>
                     <reports>
                       <xml>true</xml>
                       <html>true</html>
                     </reports>
                   </configuration>
                 </execution>
               </executions>
             </plugin>
        </plugins>
    </build>
</project>
